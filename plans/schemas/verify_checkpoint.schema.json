{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "plans/schemas/verify_checkpoint.schema.json",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "success_runs",
    "eligible_success_runs",
    "would_hit_success_runs",
    "would_miss_success_runs",
    "ineligible_success_runs",
    "last_success",
    "skip_cache"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 2
    },
    "success_runs": {
      "type": "integer",
      "minimum": 0
    },
    "eligible_success_runs": {
      "type": "integer",
      "minimum": 0
    },
    "would_hit_success_runs": {
      "type": "integer",
      "minimum": 0
    },
    "would_miss_success_runs": {
      "type": "integer",
      "minimum": 0
    },
    "ineligible_success_runs": {
      "type": "integer",
      "minimum": 0
    },
    "last_success": {
      "type": "object",
      "additionalProperties": true
    },
    "skip_cache": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "schema_version",
        "ts",
        "rollout",
        "kill_switch_token",
        "written_by_verify_sh_sha",
        "verify_sh_sha",
        "base_ref",
        "head_sha",
        "head_tree",
        "mode",
        "verify_mode",
        "changed_files_hash",
        "override_fingerprint",
        "tool_versions",
        "writer_ci",
        "writer_mode",
        "gates"
      ],
      "properties": {
        "schema_version": {
          "type": "integer",
          "const": 1
        },
        "ts": {
          "type": "integer",
          "minimum": 0
        },
        "rollout": {
          "type": "string",
          "enum": ["off", "dry_run", "enforce"]
        },
        "kill_switch_token": {
          "type": "string"
        },
        "written_by_verify_sh_sha": {
          "type": "string"
        },
        "verify_sh_sha": {
          "type": "string"
        },
        "base_ref": {
          "type": "string"
        },
        "head_sha": {
          "type": "string"
        },
        "head_tree": {
          "type": "string"
        },
        "mode": {
          "type": "string"
        },
        "verify_mode": {
          "type": "string"
        },
        "changed_files_hash": {
          "type": "string"
        },
        "override_fingerprint": {
          "type": "string"
        },
        "tool_versions": {
          "type": "object",
          "additionalProperties": true
        },
        "writer_ci": {
          "type": "boolean"
        },
        "writer_mode": {
          "type": "string"
        },
        "gates": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": [
              "input_hash",
              "last_real_run_ts",
              "consecutive_skips",
              "elapsed_s",
              "last_decision_reason"
            ],
            "properties": {
              "input_hash": { "type": "string" },
              "last_real_run_ts": { "type": "integer", "minimum": 0 },
              "consecutive_skips": { "type": "integer", "minimum": 0 },
              "elapsed_s": { "type": "number" },
              "last_decision_reason": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      }
    }
  }
}
